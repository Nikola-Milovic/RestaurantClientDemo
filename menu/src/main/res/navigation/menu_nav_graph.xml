<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_nav_graph"
    app:startDestination="@id/menuFragment">

    <fragment
        android:id="@+id/menuFragment"
        android:name="com.nikolam.menu.ui.menu.MenuFragment"
        android:label="MenuFragment" >
        <action
            android:id="@+id/action_menuFragment_to_itemDetail"
            app:destination="@id/itemDetail" />
    </fragment>

    <fragment
        android:id="@+id/itemDetail"
        android:name="com.nikolam.menu.ui.detail.ItemDetailFragment"
        android:label="item_detail_fragment"
        tools:layout="@layout/item_detail_fragment" >
        <argument
            android:name="itemID"
            app:argType="string" />
    </fragment>
</navigation>